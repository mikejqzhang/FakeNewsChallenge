{
    "dataset_reader": {
        "type": "fnc_dataset"
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 64,
        "sorting_keys": [
            [
                "body",
                "num_tokens"
            ],
            [
                "headline",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "baseline_model",
        "body_encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.2,
            "hidden_size": 100,
            "input_size": 100,
            "num_layers": 1
        },
        "classifier_feedforward": {
            "activations": [
                "relu",
                "linear"
            ],
            "dropout": [
                0.2,
                0
            ],
            "hidden_dims": [
                200,
                4
            ],
            "input_dim": 400,
            "num_layers": 2
        },
        "headline_encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.2,
            "hidden_size": 100,
            "input_size": 100,
            "num_layers": 1
        },
        "text_field_embedder": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 100,
                "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
                "trainable": false
            }
        }
    },
    "train_data_path": "fnc-1/train_data.csv",
    "validation_data_path": "fnc-1/dev_data.csv",
    "trainer": {
        "cuda_device": 0,
        "grad_clipping": 5,
        "num_epochs": 40,
        "optimizer": {
            "type": "adagrad"
        },
        "patience": 10,
        "validation_metric": "+accuracy"
    }
}